<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.as1.AddHabitActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create Habit:"
        android:id="@+id/createHabitTitle"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Habit"
        android:id="@+id/addHabitButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateCreatedInput"
        android:layout_below="@+id/editText3"
        android:layout_alignEnd="@+id/addHabitButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_alignParentTop="true"
        android:text="habitname"
        android:layout_alignEnd="@+id/dateCreatedInput"
        android:layout_alignStart="@+id/dateCreatedInput" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_MON"
        android:layout_marginTop="30dp"
        android:checked="false"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Days of The Week To Do Habit:"
        android:id="@+id/textView2"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/dateCreatedInput"
        android:layout_alignStart="@+id/createHabitTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Monday"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/checkBox_MON"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tuesday"
        android:id="@+id/textView4"
        android:layout_below="@+id/checkBox_MON"
        android:layout_alignStart="@+id/textView3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_TUE"
        android:checked="false"
        android:layout_below="@+id/checkBox_MON"
        android:layout_alignStart="@+id/checkBox_MON" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wednesday"
        android:id="@+id/textView5"
        android:layout_below="@+id/checkBox_TUE"
        android:layout_alignStart="@+id/textView4" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_WED"
        android:checked="false"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/checkBox_TUE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Thursday"
        android:id="@+id/textView6"
        android:layout_below="@+id/checkBox_WED"
        android:layout_alignStart="@+id/textView5" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_THU"
        android:checked="false"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/checkBox_WED" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Friday"
        android:id="@+id/textView7"
        android:layout_below="@+id/checkBox_THU"
        android:layout_alignStart="@+id/textView6" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_FRI"
        android:checked="false"
        android:layout_below="@+id/checkBox_THU"
        android:layout_alignStart="@+id/checkBox_THU" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Saturday"
        android:id="@+id/textView8"
        android:layout_below="@+id/checkBox_FRI"
        android:layout_alignStart="@+id/textView7" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_SAT"
        android:checked="false"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignStart="@+id/checkBox_FRI" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sunday"
        android:id="@+id/textView9"
        android:layout_below="@+id/checkBox_SAT"
        android:layout_alignStart="@+id/textView8" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_SUN"
        android:checked="false"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignStart="@+id/checkBox_SAT" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date Created"
        android:id="@+id/textView10"
        android:layout_above="@+id/textView2"
        android:layout_alignParentStart="true" />

</RelativeLayout>
